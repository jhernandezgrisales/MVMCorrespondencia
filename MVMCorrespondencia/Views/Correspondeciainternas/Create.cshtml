@model MVMCorrespondencia.Models.Correspondeciainterna

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Correspondencia Interna</h1>

<h4>Modulo para la creacion de correspondencia interna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idcontactoremitente" class="control-label">Remitente</label>
                <select asp-for="Idcontactoremitente" class ="form-control" asp-items="ViewBag.Idcontactoremitente"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idcontactodestinatario" class="control-label">Destinatario</label>
                <select asp-for="Idcontactodestinatario" class ="form-control" asp-items="ViewBag.Idcontactodestinatario"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
